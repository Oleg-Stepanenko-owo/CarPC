<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.catfishkin.carpc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.catfishkin.carpc.Activity.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.catfishkin.carpc.Activity.FM_AM_Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.catfishkin.carpc.Activity.CD_DVD_Activity"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.catfishkin.carpc.Activity.FolderActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>